    <build>
        <plugins>
            <!--
            LESS CSS Maven插件配置
            https://github.com/marceloverdijk/lesscss-maven-plugin
            执行命令：mvn lesscss:compile
            -->
            <plugin>
                <groupId>org.lesscss</groupId>
                <artifactId>lesscss-maven-plugin</artifactId>
                <version>${lesscss-maven-plugin.version}</version>
                <configuration>
                    <sourceDirectory>${basedir}/src/main/webapp/resources/less</sourceDirectory><!--less文件源目录-->
                    <outputDirectory>${basedir}/src/main/webapp/resources/css</outputDirectory><!--css文件编译目录-->
                    <watch>true</watch><!--是否监控文件改变，只执行一次，配置为false-->
                    <compress>false</compress><!--是否压缩文件-->
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal><!--伴随项目启动而执行-->
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--Maven编译插件-->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
