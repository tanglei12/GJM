	<select id="selectHouseIntentionByEm_idCount" resultType="int">
		select count(*) from view_GJP_HouseIntention_PropertyInfo
		where 1=1
		<if test="houseModel.sqlWhere != null and houseModel.sqlWhere!= ''">
