body {
	margin: 0;
	padding: 0;
	color: #666;
	background: #f5f5f9;
}

main{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 48px;
}

.content{
	background-color: #FFF;
}

.content .content_top_title{
	width: 100%;    
	padding-top: 26px;
	text-align: center;
}
.content .content_top_title .money{
    display: block;
    font-size: 3em;
    line-height: 1em;
    color: #000;
}
.content .content_top_title .pay_type{
    display: block;
    line-height: 36px;
	text-align: center;
	color: #FF6666;
}

.content .content_top_cneter{
	height: auto;
	overflow: hidden;
	position: relative;
	border-top: 1px solid #e8e8e8;
	padding: 10px 0;
}
.content .content_top_cneter .text_center{
	float: left;
	margin-left: 10px;
}
.content .content_top_cneter .text_center .name{
	color: #000;
	font-size: 15px;
	margin-top: 3px;
	overflow: hidden;
}
.content .content_top_cneter .text_center .name label{
	float: left;
}
.content .content_top_cneter .text_center .name .nameLabel{
	float: left;
	height: 22px;
	line-height: 22px;
}
.content .content_top_cneter .text_center .address{
	font-size: 12px;
	color: #999;
	margin-top: 5px;
}
.content .content_top_cneter .text_center .state{
	background-color: #FF6666;
	color: #FFF;
	font-size: 12px;
	padding: 1px 4px;
	border-radius: 3px;
	margin-left: 5px;
}
.content .content_top_cneter .moneys{
	position: absolute;
	right: 10px;
	top: 18px;
}
.content .content_top_cneter .moneys label{
	width: 100%;
	display: block;
	text-align: right;
}
.content .content_top_cneter .moneys .state{
	font-size: 13px;
	color: #FFF;
	background-color: #FF6666;
	padding: 0 5px;
	text-align: center;
	border-radius: 4px;
	height: 18px;
	line-height: 18px;
}
.content .content_top_cneter .moneys .month{
	font-size: 14px;
    color: #000;
}
.content .content_top_cneter .moneys .bill_date{
	font-size: 12px;
	color: #999;
	margin-top: 3px;
}

.content .content_top_cneter .icon{
    position: absolute;
    right: 14px;
    top: 25px;
    font-size: 20px;
}

.content .content_moneys .content_moneys_title{
	background-color: #f5f5f9;
	padding-left: 10px;
	color: #999;
	line-height: 40px;
	font-size: 13px;
}

.content .content_moneys .content_moneys_content{
	overflow: hidden;
	position: relative;
	padding: 12px 0;
	border-bottom: 1px solid #e8e8e8;
    display: flex;
/*     line-height: 48px; */
}
.content .content_moneys .content_moneys_content.bottom{
	border-bottom: none;
}
.content .content_moneys .content_moneys_content .text_center{
	margin-left: 10px;
	display: flex;
	flex: 1;
    flex-direction: column;
}
.content .content_moneys .content_moneys_content .text_center .types{
	color: #000;
	font-size: 15px;
}
.content .content_moneys .content_moneys_content .text_center .types label{
	float: left;
}
.content .content_moneys .content_moneys_content .text_center .types .nameLabel{
	float: left;
	height: 22px;
	line-height: 22px;
}
.content .content_moneys .content_moneys_content .text_center .remark{
	font-size: 13px;
	color: #999;
	margin-top: 6px;
	line-height: 18px;
}
.content .content_moneys .content_moneys_content .text_center .state{
	background-color: #FF6666;
	color: #FFF;
	font-size: 12px;
	padding: 1px 4px;
	border-radius: 3px;
	margin-left: 5px;
}
.content .content_moneys .content_moneys_content .moneys{
/* 	position: absolute; */
/* 	right: 4%; */
/* 	top: 30px; */
    padding-right: 10px;
}
.content .content_moneys .content_moneys_content .moneys .money{
    text-align: right;
	font-size: 17px;
}
.content .content_moneys .content_moneys_content .moneys .more{
	font-size: 13px;
	color: #999;
	margin-top: 6px;
	line-height: 18px;
}

.content_bottom{
	margin-top: 10px;
	background-color: #FFF;
	padding-left: 10px;
	overflow: hidden;
	font-size: 15px;
}
.content_bottom .content_bottom_content{
	height: 45px;
	line-height: 45px;
	display: flex;
	width: 100%;
	position: relative;
	border-bottom: 1px solid #e8e8e8;
}
.content_bottom .content_bottom_content.bottom{
	border-bottom: none;
}
.content_bottom .content_bottom_content .content_bottom_title{
	color: #000;
	float: left;
}
.content_bottom .content_bottom_content .content_bottom_money{
	color: #FF6666;
	position: absolute;
	top: 0;
	right: 4%;
	font-size: 17px;
}
.content_bottom .content_bottom_content .content_bottom_date{
	color: #999;
	position: absolute;
	top: 0;
	right: 4%;
	font-size: 14px;
}

button{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 48px;
	line-height: 48px;
	color: #FFF;
}