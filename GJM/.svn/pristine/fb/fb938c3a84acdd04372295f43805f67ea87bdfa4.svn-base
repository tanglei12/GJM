body { background: #f9f9f9; }
html, body { height: auto; }
input[type="file"] { display: none }
.content {
    position: relative;
    margin-bottom: 10px;
    margin-top: 10px;
    background: #ffffff;
    .content-item {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 0 10px 0;
        .item-title {
            position: relative;
            display: flex;
            font-size: 14px;
            line-height: 46px;
            color: #000;
            em {
                position: relative;
                top: 2px;
                display: inline-block;
                height: 20px;
                width: 14px;
                text-align: center;
                color: #E74C3C;
            }
            .item-title-option {
                flex: 1;
                padding-left: 10px;
            }
            .item-title-content{font-weight: bold;}
        }
        .item-content {
            position: relative;
            display: flex;
            flex: 1;
            font-size: 14px;
            line-height: 42px;
            padding-bottom: 10px;
            &:empty {
                padding-bottom: 0;
            }
            > input {
                flex: 1;
                font-size: 14px;
                line-height: 40px;
            }
            > select {
                flex: 1;
                font-size: 14px;
                padding: 0 6px;
                line-height: 40px;
            }
            > textarea {
                flex: 1;
                line-height: 24px;
                font-size: 14px;
                padding: 8px 10px 0;
                height: 80px;
                resize: none;
            }
            .item-option {
                position: relative;
                width: 40px;
                background: none;
                text-align: center;
            }
            .bank-tip {
                position: absolute;
                right: 0;
                padding: 0 10px;
            }
            .bank-list {
                position: relative;
                display: flex;
                width: 100%;
                //border: 1px solid #ddd;
                padding: 6px 10px;
                border-radius: 3px;
                line-height: 28px;
                margin-bottom: 10px;
                background: #EF5350;
                color: #fff;
                .bank-list-item {
                    display: flex;
                    > button {
                        padding: 0 10px;
                        line-height: 56px;
                        height: 56px;
                    }
                }
            }
        }
        .item-upload {
            position: relative; flex: 1; height: 120px; text-align: center; border: 1px dashed #d2d2d2; border-radius: 3px;
            &:first-child { margin-right: 10px; }
            .item-upload-head {
                padding-top: 18%;
                line-height: 20px;
                font-size: 30px;
                color: #b3b3b3;
            }
            .item-upload-footer {
                font-size: 12px;
                line-height: 30px;
            }
            .image-box-item {
                width: 100%;
                height: 100%;
                margin: 0;
                border: none;
                min-height: initial;
            }
        }
    }
    .content-submmit {
        background: #ddd;
        line-height: 48px;
        font-size: 14px;
        text-align: center;
        margin: 0 10px;
        border-radius: 3px;
        position: relative;
        display: block;
        flex: 1;
    }
}
