@charset "utf-8";
*{padding: 0;margin: 0;-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;}
:after,:before {-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;}
ul, li {list-style: none;}

/*=======电子名片=======*/
.box-content {
    position: relative;
    background: #fff;
    margin-bottom: 14px;
    border-radius: 2px;
    border:1px solid #ECECEC;
}
.box-content:LAST-CHILD{margin-bottom: 0;}
.nav-tab-focus{color: #fff;background: #3498DB;}
.nav-tab-focus:BEFORE{
	content: "";
	position: absolute;
	bottom: -6px;
	left: 50%;
	margin-left:-6px;
	width: 0;
	height: 0;
	border-top: 6px solid #3498DB; 
	border-left: 6px solid transparent;
	border-right: 6px solid transparent;
	z-index: 100;
}
/* 主体 */
.box-content .content-title {
	position: relative;
	height: 38px;
	line-height: 38px;
	font-size: 15px;
    color: #000;
	padding: 0 20px;
    border-bottom: 1px solid #3498DB;
}
.box-content .content-title:BEFORE{
    content: "";
    position: absolute;
    height: 20px;
    width: 4px;
    top: 8px;
    left: 8px;
    background: #3498DB;
    border-radius: 3px;
}
.box-content .content-main {
	position: relative;
    width: 1100px;
	display: block;
	padding: 20px;
}
.box-content .content-input{
	position: relative;
    width: 1100px;
	background: #fff;
	display: block;
	padding: 20px 20px 0;
}
.box-content>.content-foot{
	position: relative;
    font-size: 15px;
    padding: 10px 20px;
    text-align: left;
    width: 1100px;
}
.box-content .content-foot button{
    position: relative;
    top: 0;
    left: 0;
    display: inline-block;
    font-size: 14px;
    padding: 1px 20px;
    border-radius: 4px;
    line-height: 28px;
    cursor: pointer;
    margin-left: 130px;
}
.box-content .content-foot button.btn {
    border: 1px solid transparent;
    background: #3E97C9;
    color: #fff;
}
.box-content .content-foot button.cancel{
	width: auto !important;
    color: #666;
    background: #f7f7f7;
    border: 1px solid #e1e1e1;
}
/**#### 子集title样式 -START-------**/
.sub-title {
	position: relative;
	border-bottom: 1px solid #ECECEC;
	color: #000000;
	height: 40px;
	line-height: 40px;
}
.sub-title>ul{padding: 0;margin: 0}
.sub-title>ul>li{
	position: relative;
  	float: left;
    text-align: center;
    font-size: 14px;
    padding: 0 12px;
    height: 40px;
    line-height: 40px;
    margin-right: 6px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    cursor: default;
}
.sub-title>ul>li.visited{ 
	text-indent: 14px;
}
.sub-title>ul>li.visited:AFTER {
    content: "";
    display: block;
    width: 6px;
    height: 16px;
    position: absolute;
    background: #3e97c9;
    top: 12px;
    border-radius: 2px;
    visibility:visible;
}
.sub-title>ul>li.link:hover{
	background: #f1f1f1;
	cursor: pointer;
	color: #3e97c9;
}
.sub-title>ul>li>a{
	color: #000;
}
.sub-title .title-option{
	position: absolute;
    top: 0;
    right: 0px;
    padding: 4px 5px;
}
.sub-title .title-option>button[class^="option-"]{
	padding: 0 12px;
    line-height: 30px;
    font-size: 14px;
    margin-left: 10px;
    color: #666;
    background: #fff;
    border: 1px solid transparent;
	outline: none;
	cursor: pointer;
	border-radius: 4px;
	-webkit-transition: -webkit-box-shadow ease-in-out .15s;
		 -o-transition: box-shadow ease-in-out .15s;
			transition: box-shadow ease-in-out .15s
}
.sub-title .title-option>button.option-edit{
	background: #66afe9;
	color: #fff;
}
.sub-title .title-option>button.option-edit:HOVER{
	background: #66afe9;
	color: #fff;
	outline: 0;
	-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6);
			box-shadow: 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
}

.sub-title .title-option>button.option-save{
    background: #66afe9;
    color: #fff;
}
.sub-title .title-option>button.option-save:HOVER{
	background: #66afe9;
	color: #fff;
	outline: 0;
	-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6);
			box-shadow: 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
}
.sub-title .title-option>button.option-cancel{
    background: #dc5e5e;
    color: #fff;
}
.sub-title .title-option>button.option-cancel:HOVER{
	background: #dc5e5e;
	color: #fff;
	outline: 0;
	-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(255, 111, 111, .6);
			box-shadow: 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(255, 111, 111, .6)
}
.sub-title .title-option .title-option-item{
	position: relative;
	display: block;
	float: left;
    margin-left: 10px;
}
.sub-title .title-option .title-option-item:AFTER{
	content: "";
	display: block;
	clear: both;
}
.title-option-item .option-item-title{
	position: relative;
	display: block;
	float: left;
	line-height: 36px;
    padding: 0 10px;
    font-size: 14px;
}
.title-option-item .option-item-content{
    position: relative;
    display: block;
    float: left;
}
.title-option-item select.option-item-content{
    position: relative;
    display: block;
    float: left;
    height: 36px;
    padding: 0 6px;
    border-radius: 4px;
    -webkit-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}
/**#### 子集title样式 -END-------**/
/**=====图片上传=======================**/
input[type=file]{display: none;}
.image-upload-box{
	position: relative;
	min-width: 150px;
    padding: 16px;
    border-radius: 12px;
    background-color: #f7f7f7;
    border: 1px solid #eee;
}
.image-upload-box:AFTER{content: "";display: block;clear: both;}
.image-upload-box>.image-item{
    position: relative;
    width: 274px;
    height: 150px;
    float: left;
    margin-right: 12px;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.29);
}
.image-upload-box>.image-item>.image-mask{
    position: absolute;
    height: 100%;
    width: 100%;
    line-height: 150px;
    text-align: center;
    color: #fff;
    font-size: 20px;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9;
}
.image-upload-box>.image-item>img{
	display: block;
	width: 100%;
	height: 100%;
}
.image-upload-box>.image-item>.image-item-label{
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: center;
    line-height: 30px;
    background: #1abc9c;
    padding: 0 12px;
    color: #fff;
    cursor: pointer;
    -moz-user-select: none;
    -webkit-user-select: none;
}
.image-upload-box>.image-item>.image-item-ul{
    position: absolute;
    bottom: 30px;
    left: 0;
}
.image-upload-box>.image-item>.image-item-ul li{
    text-align: center;
    line-height: 28px;
    padding: 0px 10px;
    margin-bottom: 2px;
    background: #ffffff;
    border: 1px solid #3498db;
    color: #3498db;
    cursor: default;
    -moz-user-select: none;
    -webkit-user-select: none;
}
.image-upload-box>.image-item>.image-item-ul li:HOVER{
	background: #3498db;
	color: #fff;
	border-color: #3498db;
}
.image-upload-box>.image-item>.image-item-close{
    position: absolute;
    top: 0px;
    right: 0px;
    display: none;
    text-align: center;
    width: 30px;
    line-height: 30px;
    background: #E74C3C;
    font-size: 14px;
    color: #fff;
}
.image-upload-box>.image-item:HOVER>.image-item-close{
	display: block !important;
}
.image-upload-box>.image-item-add{
    position: relative;
    width: 274px;
    height: 150px;
    line-height: 200px;
    font-size: 14px;
    text-align: center;
    float: left;
    margin-right: 12px;
    border: 1px solid #3e97c9;
    border-radius: 4px;
    background: url("/resources/image/add_img.png") #fff no-repeat 52% 32%;
    cursor: pointer;
}
.image-upload-box>.image-item-add:HOVER {
	border: 1px dashed #3498DB;
	color: #3498DB;
}

.image-show{
	position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9;
}
.image-show-mask{
	position: absolute;
	width: 100%;
	height: 100%;
    background: rgba(0, 0, 0, 0.29);
}
.image-show>.image-show-head{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 40px;    
	background: #f5f5f5;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.24);
}
.image-show>.image-show-head:AFTER{content: "";display: block'';clear: both;}
.image-show>.image-show-main{
    position: relative;
    top: 40px;
    height: 100%;
}

.image-show-head-title{
	position: relative;
	float: left;
	line-height: 40px;
	padding: 0 12px;
	font-size: 14px;
}
.image-show-head-option{
	position: relative;
	float: right;
}
.image-show-head-option>ul{
	position: relative;
	display: table;
}
.image-show-head-option>ul>li{
	position: relative;
	display: table-cell;
	line-height: 40px;
   	padding: 0 12px;
   	font-size: 14px;
}
.image-show-head-option>ul>li.image-show-icon:HOVER{
	background: #18bc9c;
	color: #fff;
   	cursor: pointer;
}
.image-show-head-option>ul>li.image-show-ok:HOVER{
	background: #3498DB;
	color: #fff;
   	cursor: pointer;
}
.image-show-head-option>ul>li.image-show-icon:LAST-CHILD:HOVER{
	background: #E74C3C;
	color: #fff;
}

.image-show>.image-show-main>.image-content{
    position: relative;
    display: block;
    margin: 0 auto;
    margin-top: 16%;
    width: 600px;
    height: 600px;
}
.image-show>.image-show-main .cropper-bg{background: none}
