@charset "utf-8";
*{padding: 0;margin: 0;-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;}
:after,:before {-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;}
body {font: 12px/150% '微软雅黑',Arial, Verdana, "\5b8b\4f53";min-width: 980px;overflow: hidden;color: #666;background-color: #f2f4f8;}
ul, li {list-style: none;}
i {font-style: normal;}
fieldset{border:0}
/****蓝色背景button******/
.button-a {
	padding: 0 20px !important;
	color: #FFF;
	background-color: #3498DB;
	height: 30px;
	line-height: 30px;
	border: 0;
	border-radius: 4px;
	outline: none;
	cursor: pointer;
	margin-left: 15px;
}
/*自定义checkbox-a*/
.checkbox-a {
	position: relative;
}

.checkbox-a .input_check {
	display: none;
}

.checkbox-a .input_check+span {
	display: inline-block;
	border: 1px solid #a9a9a9;
	width: 12px;
	height: 12px;
	position: absolute;
	top: 2px;
	left: 0;
}

.checkbox-a .input_check:checked+span {
	border: 1px solid #18bc9c
}

.checkbox-a .input_check:checked+span:after {
	content: "";
	position: absolute;
	left: 0px;
	bottom: 4px;
	width: 10px;
	height: 6px;
	border: 2px solid #18bc9c;
	border-top-color: transparent;
	border-right-color: transparent;
	-ms-transform: rotate(-60deg);
	-moz-transform: rotate(-60deg);
	-webkit-transform: rotate(-60deg);
	transform: rotate(-45deg);
}

.checkbox-a i {
	font-style: normal;
	margin-left: 20px;
}
/*自定义checkbox-b*/
.checkbox-b {
	position: relative;
}

.checkbox-b .input_check {
	display: none;
}

.checkbox-b .input_check+span {
	display: inline-block;
	border: 1px solid #a9a9a9;
	width: 14px;
	height: 14px;
	position: absolute;
	top: 2px;
	left: 0;
	border-radius: 2px;
}

.checkbox-b .input_check:checked+span {
	border: 1px solid #18bc9c
}

.checkbox-b .input_check:checked+span:after {
	content: "";
	position: absolute;
	left: 0px;
	bottom: 4px;
	width: 12px;
	height: 7px;
	border: 2px solid #18bc9c;
	border-top-color: transparent;
	border-right-color: transparent;
	-ms-transform: rotate(-60deg);
	-moz-transform: rotate(-60deg);
	-webkit-transform: rotate(-60deg);
	transform: rotate(-45deg);
}

.checkbox-b i {
	font-style: normal;
	margin-left: 20px;
}
/****禁用checkbox***/
li.disabled {
	color: #ccc !important;
}
li.disabled .folder span{
	color: #ccc !important;
}
li.disabled label span{
	border: 1px solid #CCC !important;
}

li.disabled label span:after{
	border: 2px solid #CCC !important;
    border-top-color: transparent !important;
    border-right-color: transparent !important;
}
/*****内容区域模块*****/
.center {
	margin: 1%;
	width: 98%;
}

.center .title {
	width: 100%;
	height: 45px;
	background-color: #FFF;
}

.center .title .fa-group {
	color: #3498db;
	font-size: 25px;
	margin-top: 10px;
	margin-left: 15px;
}

.center .title .title-font {
	font-size: 18px;
	color: #000;
	margin-left: 10px;
}

.center .menu {
	height: 35px;
	line-height: 35px;
	font-size: 14px;
	background-color: #FFF;
	border-top: 1px solid #3498db;
}

.center .menu li {
	height: 35px;
	line-height: 35px;
	width: 120px;
	text-align: center;
	cursor: pointer;
	position: relative;
	float: left;
}

.center .menu li .bottom-triangle {
	display: none;
	width: 0;
	height: 0;
	border-left: 7px solid transparent;
	border-right: 7px solid transparent;
	border-top: 8px solid #3498db;
	margin-left: 42px;
	position: absolute;
	left: 10px;
	bottom: -7px;
}

.center .menu li.clicks {
	background-color: #3498db;
	color: #FFF;
}

.center .menu li.clicks .bottom-triangle {
	display: block !important;
}

.content {
	width: 100%;
	background-color: #FFF;
	margin-top: 13px;
	padding-top: 15px;
}

.content .content-operation {
	height: 26px;
	margin-right: 1%;
    width: 98%;
}
.content .content-operation i{
	margin-right: 5px;
}
.content .content-operation button {
	height: 25px;
	line-height: 25px;
	border: 1px solid #AECEF1;
	color: #269BFF;
	background-color: #FFF;
	text-align: center;
	margin-right: 10px;
	float: right;
	padding: 0px 20px;
	border-radius: 4px;
	outline: none;
	cursor: pointer;
}

.content .content-center {
	position: relative;
	width: 100%;
	height: 740px;
	border-top: 1px solid #3498db;
	margin-top: 10px;
	overflow: auto;
}
/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/  
.content .content-center::-webkit-scrollbar  
{  
	width:0;
    height: 10px;  
}
/*定义滑块 内阴影+圆角*/ 
.content .content-center::-webkit-scrollbar-thumb  
{  
    background-color: #ccc;  
} 
/*权限列表*/
.powersList {
	width: 4000px;
	overflow: hidden;
}

.powersList .level_1:first-child{
	margin-left: 8px !important;
}
.powersList .level_1:last-child{
	margin-right: 8px !important;
}
.powersList .level_1 {
	min-width:130px;
	float: left;
	margin-top: 10px;
	margin-bottom: 80px;
	margin-right: 10px;
}
.powersList .level_1>p {
	height: 30px;
    line-height: 30px;
    background: #c2efc7;
    padding: 0 10px;
}
.powersList .level_2 {
	border: 1px solid #c2efc7;
    border-top: 0;
}
.powersList .level_2>p {
	height: 36px;
    line-height: 36px;
    padding: 0 10px;
}
.powersList .level_2>ul:last-child {
	margin-bottom: 15px;
}

.powersList .level_3>p {
	height: 22px;
    line-height: 22px;
    padding: 0 30px;
}
.powersList .folder>p{
	height: 22px;
    line-height: 22px;
    padding: 0 17px;
    cursor: pointer;
}
.powersList .folder>p .square{
	margin-right: 3px;
	color: #18bc9c;
}
/*右侧操作栏*/
.addPowers {
	position: absolute;
	right: -436px;
	top: 0;
	width: 400px;
	height: 100%;
	background-color: #FFF;
	box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .14);
}

.addPowers .addPowers-close {
	display: block;
	width: 35px;
	height: 35px;
	background-color: #E74C3C;
	position: absolute;
	left: -35px;
	top: 0;
	cursor: pointer;
}

.addPowers .addPowers-close .fa-close {
	color: #FFF;
	position: absolute;
	left: 12px;
	top: 10px;
}

.addPowers dl {
	width: 100%;
	height: 30px;
	line-height: 30px;
	margin: 15px 0px;
}

.addPowers dt {
	width: 80px;
	float: left;
	font-size: 13px;
	height: 30px;
	line-height: 30px;
	text-align: right;
}

.addPowers dd {
	float: left;
	margin-left: 10px;
	font-size: 14px;
}

.addPowers .addPowers-title {
	border-bottom: 1px solid #3498db;
	height: 34px;
	line-height: 34px;
	font-size: 15px;
	text-indent: 5px;
}

.addPowers input {
	width: 180px;
	height: 27px;
	line-height: 27px;
	border: 0;
	border: 1px solid #CCC;
	text-indent: 7px;
	color: #666;
	font-size: 15px;
	background-color: #fdf7f7;
	border-radius: 3px;
}
.addPowers input+label.error{
	color:red;
	margin-left: 5px;
}
