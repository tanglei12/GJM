.first-title {
    font-size: 18px;
    color: #222;
    margin: 10px 0;
}
.title-dl{
    border-bottom: 1px solid #efefef;
}
.lcouponsConfig-dl{
    display: flex;
    padding-bottom: 14px;
}
dl.lcouponsConfig-dl dt {
    position: relative;
    line-height: 34px;
    min-width: 135px;
    text-align: left;
    font-size: 14px;
    padding-right: 15px;
}
dl.lcouponsConfig-dl dd {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    min-height: 34px;
    line-height: 34px;
    font-size: 14px;
    color: #000000;
}

.dd-line{
    min-width: 255px;
}