.popup-desc-box {
    display: flex;
    padding: 10px;
}
.popup-desc-label {
    line-height: 30px;
    font-size: 12px;
    border: 1px solid #ddd;
    padding: 0 10px;
    border-radius: 3px;
    margin-right: 10px;
}
.popup-desc-label:hover {
    border-color: #3498db;
    color: #3498db;
}
.other-day {
    padding: 0 10px;
    display: inline-block;
    text-indent: 0;
    box-shadow: 0 0 0 1px #ddd;
    border-radius: 3px;
    margin-left: 10px;
}
.other-day > input {
    width: 60px;
}